<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed %>
  <i class="fa-solid fa-square-check"></i>
<% else %>
  <i class="fa-solid fa-square"></i>
<% end %>


<%= link_to "Back to List" ,tasks_path %>

<%= link_to "Edit", edit_task_path(@task) %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
